@model HeatEnergyConsumption.Models.ProducedProduct

@{
    ViewData["Title"] = "Подробности о произведённой продукции";
}

<div class="limiter-operation-form">
    <div class="container-title">
        <h1>@ViewData["Title"]</h1>
    </div>

    <div class="container-operation-form">
        <div class="operation-form">
            <dl class="details-wrapper">
                <dt class="details-block-title">
                    @Html.DisplayNameFor(model => model.Organization):
                </dt>
                <dd class="details-block-value">
                    @Html.DisplayFor(model => model.Organization.Name).
                </dd>
            </dl>
            <dl class="details-wrapper">
                <dt class="details-block-title">
                    @Html.DisplayNameFor(model => model.ProductType):
                </dt>
                <dd class="details-block-value">
                    @Html.DisplayFor(model => model.ProductType.Name).
                </dd>
            </dl>
            <dl class="details-wrapper">
                <dt class="details-block-title">
                    @Html.DisplayNameFor(model => model.ProductQuantity):
                </dt>
                <dd class="details-block-value">
                    @Html.DisplayFor(model => model.ProductQuantity).
                </dd>
            </dl>
            <dl class="details-wrapper">
                <dt class="details-block-title">
                    @Html.DisplayNameFor(model => model.HeatEnergyQuantity):
                </dt>
                <dd class="details-block-value">
                    @Html.DisplayFor(model => model.HeatEnergyQuantity).
                </dd>
            </dl>
            <dl class="details-wrapper">
                <dt class="details-block-title">
                    @Html.DisplayNameFor(model => model.DisplayedQuarter):
                </dt>
                <dd class="details-block-value">
                    @Html.DisplayFor(model => model.DisplayedQuarter).
                </dd>
            </dl>
            <dl class="details-wrapper">
                <dt class="details-block-title">
                    @Html.DisplayNameFor(model => model.DisplayedYear):
                </dt>
                <dd class="details-block-value">
                    @Html.DisplayFor(model => model.DisplayedYear).
                </dd>
            </dl>

            <div class="operation-and-return-container-btn">
                <a class="return-btn" asp-action="Index">Вернуться к таблице</a>
            </div>
        </div>
    </div>
</div>