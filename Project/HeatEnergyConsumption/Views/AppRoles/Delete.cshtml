@using Microsoft.AspNetCore.Identity
@model IdentityRole

@{
    ViewData["Title"] = "Удаление роли";
}

<div class="limiter-operation-form">
    <div class="container-title">
        <h1>@ViewData["Title"]</h1>
    </div>

    <div class="container-operation-form">
        <div class="operation-form">
            <dl class="delete-wrapper">
                <dt class="delete-block-title">
                    ID:
                </dt>
                <dd class="delete-block-value">
                    @Html.DisplayFor(model => model.Id).
                </dd>
            </dl>
            <dl class="delete-wrapper">
                <dt class="delete-block-title">
                    НАЗВАНИЕ:
                </dt>
                <dd class="delete-block-value">
                    @Html.DisplayFor(model => model.Name).
                </dd>
            </dl>

            <div class="operation-and-return-container-btn">
                <form class="delete-form" asp-action="Delete">
                    <input type="hidden" asp-for="Id" />
                    <input class="delete-btn" type="submit" value="Удалить" />
                </form>
                <a class="return-btn" asp-action="Index">Вернуться к таблице</a>
            </div>
        </div>
    </div>
</div>